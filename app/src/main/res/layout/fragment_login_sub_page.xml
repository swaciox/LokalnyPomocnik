<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.LoginSubPage">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="@string/nazwa_uzytkownika"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorTextPrimary"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="11dp" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="@string/email"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorTextPrimary"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <ImageView
            android:layout_width="42dp"
            android:src="@drawable/ic_action_name"
            android:id="@+id/imageView"
            android:layout_marginLeft="-5dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="@string/haslo"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorTextPrimary"
            android:layout_weight="1"
            android:layout_below="@+id/editText2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_alignStart="@+id/editText2" />

        <ImageView
            android:src="@drawable/ic_mail_outline"
            android:id="@+id/imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/editText2"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="42dp"
            app:srcCompat="@drawable/ic_lock_outline"
            android:id="@+id/imageView3"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/editText2"
            android:layout_alignStart="@+id/imageView" />

        <Button
            android:text="@string/button_zarejestruj"
            android:textColor="@color/colorTextIcons"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_height="60dp"
            android:id="@+id/buttonZarejestruj"
            android:background="@drawable/button_rounded_corners"
            android:layout_width="160dp"
            android:layout_below="@+id/editText3"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</FrameLayout>
